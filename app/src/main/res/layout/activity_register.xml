<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/light_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_head"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Please enter your details to Register on the App"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout1"
            android:layout_below="@id/textview_register_head">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_fullname"
            android:textColor="#555555"
            android:text="Full Name*"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginTop="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/editText_register_fullname"
            android:hint="Enter your full name"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:layout_below="@id/textview_register_fullname"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout2"
            android:layout_below="@id/register_layout1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_register_email"
                android:textColor="#555555"
                android:text="Email*"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="6dp"
                android:inputType="textEmailAddress"
                android:id="@+id/editText_register_email"
                android:hint="email@xxx.com"
                android:layout_below="@id/textview_register_email"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout3"
            android:layout_below="@id/register_layout2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_register_number"
                android:textColor="#555555"
                android:text="Phone number*"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="6dp"
                android:inputType="phone"
                android:id="@+id/editText_register_number"
                android:hint="9XXX99XXX9"
                android:layout_below="@id/textview_register_number"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout4"
            android:layout_below="@id/register_layout3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_register_dob"
                android:textColor="#555555"
                android:text="Date of Birth (DD/MM/YYYY)"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="6dp"
                android:inputType="date"
                android:id="@+id/editText_register_dob"
                android:hint="dd/mm/yyyy"
                android:layout_below="@id/textview_register_dob"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout5"
            android:layout_below="@id/register_layout4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_register_gender"
                android:textColor="#555555"
                android:text="Gender*"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginTop="25dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_register_gender"
                android:orientation="horizontal"
                android:id="@+id/register_gender">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_Male"
                    android:textSize="14sp"
                    android:text="Male"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_Female"
                    android:textSize="14sp"
                    android:layout_marginLeft="14dp"
                    android:text="Female"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_None"
                    android:textSize="14sp"
                    android:layout_marginLeft="14dp"
                    android:text="Neanderthal"/>

            </RadioGroup>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout6"
            android:layout_below="@id/register_layout5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_register_password"
                android:textColor="#555555"
                android:text="Password*"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="6dp"
                android:inputType="textPassword"
                android:id="@+id/editText_register_password"
                android:hint="Enter Password"
                android:layout_below="@id/textview_register_password"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout7"
            android:layout_below="@id/register_layout6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_register_confirm_password"
                android:textColor="#555555"
                android:text="Confirm Password*"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="6dp"
                android:inputType="textPassword"
                android:id="@+id/editText_register_confirm_password"
                android:hint="Confirm Password"
                android:layout_below="@id/textview_register_confirm_password"/>

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button_register"
            android:layout_centerInParent="true"
            android:text="REGISTER"
            android:layout_marginTop="25dp"
            android:layout_below="@id/register_layout7"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_progress_bar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="20dp"
            android:visibility="gone"/>

    </RelativeLayout>

</ScrollView>